<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Priority?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.PrimaryController" style="-fx-background-color: #f0f4f7;">
   <children>
      <Label text="Welcome to Project Manager PRO" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2a2a2a;"/>

      <HBox alignment="CENTER" spacing="10">
         <Label text="Username:" style="-fx-font-size: 16px;"/>
         <TextField fx:id="usernameTextField" onAction="#onEnter" promptText="Enter Username" maxWidth="200.0"/>
      </HBox>
      <Button fx:id="primaryButton" text="Login" onAction="#switchToSecondary" style="-fx-background-color: #5a9bd4; -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 5; -fx-padding: 10 20 10 20;"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
